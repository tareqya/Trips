<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.TripActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trip_IV_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/icon"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/trip_TV_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Trip name"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"

            />

        <TextView
            android:id="@+id/trip_TV_description"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="description"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/trip_TV_length"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="length"
            android:textColor="@color/brown"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/trip_LL_dateWrapper"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/trip_BTN_pickDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick date"

                />
            <TextView
                android:id="@+id/trip_TV_pickDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/trip_BTN_book"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="Book"
            android:layout_gravity="center"
            />
    </LinearLayout>

</ScrollView>